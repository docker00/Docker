@model IEnumerable<GroupViewModel>

@{
    List<GroupViewModel> groups = ViewBag.Groups;
    string roleId = ViewBag.RoleId;
}

<div class="panel panel-default" id="resourceGroups">
    <div class="panel-heading">
        <div class="panel-title">
            <a href="#resourceGroups_collapse" data-toggle="collapse"><span class="glyphicon glyphicon-plus" style="float:left;"></span>&nbsp;Группы</a>
        </div>
    </div>
    <div id="resourceGroups_collapse" class="panel-collapse collapse">
        <div class="panel-body">

            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr>
                        <th style="text-align:center;">Название группы</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        @foreach (GroupViewModel group in Model)
                        {
                            <tr>
                                <td align="center">@group.Name</td>
                                <td align="center">
                                    <a href="/Role/DeleteGroup/?groupId=@group.Id&roleId=@roleId" class="glyphicon glyphicon-remove" title="Удалить"></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" align="center">Нет записей</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <a href="/Role/_AddGroupPartial/?roleId=@roleId" class="btn btn-default" id="groupAddBtn"
               data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace-with" data-ajax-update="#groupAddBtn">
                Добавить&nbsp;<span class="glyphicon glyphicon-plus"></span>
            </a>
        </div>
    </div>
</div>