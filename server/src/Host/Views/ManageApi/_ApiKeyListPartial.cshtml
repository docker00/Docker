<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Список API ключей</h3>
    </div>
    <div class="panel-body">
        @Html.Partial("_ApiKeyAddPartial")
        <table id="apiKeyDataTable"
               data-url="/ManageApi/ApiKeyData/"
               data-toggle="table"
               data-show-refresh="true"
               data-show-toggle="true"
               data-method="get"
               data-height="300"
               data-show-columns="true"
               data-pagination="true"
               data-side-pagination="client"
               data-page-size="10"
               data-page-list="[5, 10, 20, 50, 100, 200]"
               data-search="false">
            <thead>
                <tr>
                    <th data-field="apiKey" data-align="center" data-visible="true" data-sortable="false">
                        Ключ API
                    </th>
                    <th data-field="clientId" data-align="center" data-visible="true" data-sortable="false">
                        Клиент
                    </th>
                    <th data-field="actions" data-align="center" data-formatter="apiKeyListActionFormatter" data-events="apiKeyListOperateEvents"
                        data-visible="true" data-sortable="false">
                        Действия
                    </th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="panel-footer">
        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#clientListModal">
            Добавить ключ API&nbsp;<span class="glyphicon glyphicon-plus"></span>
        </button>
    </div>
</div>

