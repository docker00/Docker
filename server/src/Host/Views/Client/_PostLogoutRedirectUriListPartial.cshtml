@model IEnumerable<PostLogoutRedirectUriViewModel>

@{
    List<PostLogoutRedirectUriViewModel> logoutRedirectUris = ViewBag.LogoutRedirect;
    string clientId = ViewBag.ClientId;
}

<div class="panel panel-default" id="postLogoutRedirectUris">
    <div class="panel-heading">
        <div class="panel-title">
            <a href="#postLogoutRedirectUris_collapse" data-toggle="collapse"><span class="glyphicon glyphicon-plus" style="float:left;"></span>&nbsp;Разрешенные переадресации после выхода</a>
        </div>
    </div>
    <div id="postLogoutRedirectUris_collapse" class="panel-collapse collapse">
        <div class="panel-body">
            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr>
                        <th style="text-align:center;">Переадресация</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (PostLogoutRedirectUriViewModel redirect in Model)
                        {
                            <tr>
                                <td align="center">@redirect.Name</td>
                                <td align="center">
                                    <a href="/Client/DeletePostLogoutRedirectUri/?clientId=@clientId&postLogoutRedirectUriId=@redirect.Id" class="glyphicon glyphicon-remove" title="Удалить у клиента"></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" align="center">Нет записей</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <a href="/Client/_AddPostLogoutRedirectUriPartial/?clientId=@clientId" class="btn btn-default" id="logoutRedirect"
               data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace-with" data-ajax-update="#logoutRedirect">
                Добавить&nbsp;<span class="glyphicon glyphicon-plus"></span>
            </a>
        </div>
    </div>
</div>

