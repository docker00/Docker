@model ClientInputModel
@{
    ViewData["Title"] = "Редактирование основной информации";
    IReadOnlyDictionary<string, string> protocols = ViewBag.ProtocolType;
}

<div id="clientMainInfoEdit" class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <a href="#clientMainInfoEdit_collapse" data-toggle="collapse">Добавление ограничения<span class="glyphicon glyphicon-plus" style="float:right;"></span></a>
        </div>
    </div>
    <div id="clientMainInfoEdit_collapse" class="panel-collapse collapse in">
        <form asp-controller="Client" asp-action="_EditPartial" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace-with" data-ajax-update="#clientMainInfoEdit">
            <div class="panel-body">
                <div class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="ClientId" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="ClientId" class="form-control" value="@Model.ClientId" />
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <select asp-for="ProtocolType" class="form-control">
                                @foreach (KeyValuePair<string, string> protocol in protocols)
                                {
                                    <option value="@protocol.Value">@protocol.Key</option>
                                }
                            </select>
                            <span asp-validation-for="ProtocolType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="RequireClientSecret" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input type="checkbox" asp-for="RequireClientSecret" />
                            <span asp-validation-for="RequireClientSecret" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClientName" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="ClientName" class="form-control" />
                            <span asp-validation-for="ClientName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClientUri" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="ClientUri" class="form-control" />
                            <span asp-validation-for="ClientUri" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoUri" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="LogoUri" class="form-control" />
                            <span asp-validation-for="LogoUri" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="RequireConsent" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input type="checkbox" asp-for="RequireConsent" />
                            <span asp-validation-for="RequireConsent" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="RequirePkce" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="RequirePkce" type="checkbox" />
                            <span asp-validation-for="RequirePkce" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AllowPlainTextPkce" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="AllowPlainTextPkce" type="checkbox" />
                            <span asp-validation-for="AllowPlainTextPkce" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AllowAccessTokensViaBrowser" class="col-md-3 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="AllowAccessTokensViaBrowser" type="checkbox" />
                            <span asp-validation-for="AllowAccessTokensViaBrowser" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoutUri" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="LogoutUri" class="form-control" />
                            <span asp-validation-for="LogoutUri" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoutSessionRequired" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="LogoutSessionRequired" type="checkbox" />
                            <span asp-validation-for="LogoutSessionRequired" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AllowOfflineAccess" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="AllowOfflineAccess" type="checkbox" />
                            <span asp-validation-for="AllowOfflineAccess" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AlwaysIncludeUserClaimsInIdToken" class="col-md-3 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="AlwaysIncludeUserClaimsInIdToken" type="checkbox" />
                            <span asp-validation-for="AlwaysIncludeUserClaimsInIdToken" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdentityTokenLifetime" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="IdentityTokenLifetime" class="form-control" />
                            <span asp-validation-for="IdentityTokenLifetime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccessTokenLifetime" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="AccessTokenLifetime" class="form-control" />
                            <span asp-validation-for="AccessTokenLifetime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorizationCodeLifetime" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="AuthorizationCodeLifetime" class="form-control" />
                            <span asp-validation-for="AuthorizationCodeLifetime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AbsoluteRefreshTokenLifetime" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="AbsoluteRefreshTokenLifetime" class="form-control" />
                            <span asp-validation-for="AbsoluteRefreshTokenLifetime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SlidingRefreshTokenLifetime" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="SlidingRefreshTokenLifetime" class="form-control" />
                            <span asp-validation-for="SlidingRefreshTokenLifetime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="RefreshTokenUsage" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <select asp-for="RefreshTokenUsage" class="form-control">
                                <option value="1">@IdentityServer4.Models.TokenUsage.OneTimeOnly</option>
                                <option value="2">@IdentityServer4.Models.TokenUsage.ReUse</option>
                            </select>
                            <span asp-validation-for="RefreshTokenUsage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateAccessTokenClaimsOnRefresh" class="col-md-3 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="UpdateAccessTokenClaimsOnRefresh" type="checkbox" />
                            <span asp-validation-for="UpdateAccessTokenClaimsOnRefresh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="RefreshTokenExpiration" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <select asp-for="RefreshTokenExpiration" class="form-control">
                                <option value="1">@IdentityServer4.Models.TokenExpiration.Absolute</option>
                                <option value="2">@IdentityServer4.Models.TokenExpiration.Sliding</option>
                            </select>
                            <span asp-validation-for="RefreshTokenExpiration" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccessTokenType" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <select asp-for="AccessTokenType" class="form-control">
                                <option value="0">@IdentityServer4.Models.AccessTokenType.Jwt</option>
                                <option value="1">@IdentityServer4.Models.TokenExpiration.Sliding</option>
                            </select>
                            <span asp-validation-for="AccessTokenType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnableLocalLogin" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="EnableLocalLogin" type="checkbox" />
                            <span asp-validation-for="EnableLocalLogin" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="IncludeJwtId" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="IncludeJwtId" type="checkbox" />
                            <span asp-validation-for="IncludeJwtId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="AlwaysSendClientClaims" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="AlwaysSendClientClaims" type="checkbox" />
                            <span asp-validation-for="AlwaysSendClientClaims" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrefixClientClaims" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="PrefixClientClaims" type="checkbox" />
                            <span asp-validation-for="PrefixClientClaims" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Enabled" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="Enabled" type="checkbox" />
                            <span asp-validation-for="Enabled" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-success">Сохранить&nbsp;<span class="glyphicon glyphicon-ok"></span></button>
                <a href="/Client/_DetailsPartial/?clientId=@Model.Id" class="btn btn-default" style="float:right"
                   data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace-with" data-ajax-update="#clientMainInfoEdit">
                    Отмена&nbsp;<span class="glyphicon glyphicon-ban-circle"></span>
                </a>
            </div>
        </form>
    </div>
</div>
