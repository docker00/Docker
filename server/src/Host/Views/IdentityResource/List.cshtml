@model List<IdentityResourceCustom>
@using MySql.AspNet.Identity;
@{
    ViewData["Title"] = "Список ресурсов";
}

<h3 class="page-header">@ViewData["Title"].</h3>

<a href="/IdentityResource/Add/" class="btn btn-default" role="button">Добавить ресурс</a>

<table id="identityResource_data_table"
       data-url="/IdentityResource/Data"
       data-toggle="table"
       data-show-refresh="true"
       data-show-toggle="true"
       data-method="get"
       data-height="500"
       data-detail-view="false"
       data-show-columns="true"
       data-pagination="true"
       data-side-pagination="client"
       data-page-size="10"
       data-page-list="[5, 10, 20, 50, 100, 200]"
       data-search="true">
    <thead>
        <tr>
            <th data-field="name" data-align="center" data-visible="true" data-sortable="true">
                Name
            </th>            
            <th data-field="displayName" data-align="center" data-visible="true" data-sortable="true">
                DisplayName
            </th>
            <th data-field="description" data-align="center" data-visible="true" data-sortable="true">
                Description
            </th>
            <th data-field="required" data-formatter="identityResourceCustomCheckboxFormatter" data-align="center" data-visible="true" data-sortable="false">
                Required
            </th>
            <th data-field="emphasize" data-formatter="identityResourceCustomCheckboxFormatter" data-align="center" data-visible="true" data-sortable="false">
                Emphasize
            </th>
            <th data-field="showInDiscoveryDocument" data-formatter="identityResourceCustomCheckboxFormatter" data-align="center" data-visible="true" data-sortable="false">
                ShowInDiscoveryDocument
            </th>
            <th data-field="enabled" data-formatter="identityResourceCustomCheckboxFormatter" data-align="center" data-visible="true" data-sortable="false">
                Enabled
            </th>
            <th data-field="actions" data-formatter="identityResourceCustomFormatter" data-events="identityResourceCustomEvents" data-align="center" data-visible="true" data-sortable="false">
                Действия
            </th>
        </tr>
    </thead>
</table>

@section Scripts{
    <link href="~/lib/bootstrap-table/dist/bootstrap-table.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-table/dist/bootstrap-table.min.js"></script>
    <script src="~/lib/bootstrap-table/dist/locale/bootstrap-table-ru-RU.min.js"></script>
    <script src="~/project/identity_resource_scripts.js"></script>
}