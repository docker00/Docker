@model IdentityResourceViewModel

<div id="resourceMainInfo" class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <a href="/IdentityResource/_EditPartial/?identityResourceId=@Model.Id" class="glyphicon glyphicon-edit" style="float:right;"
               data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace-with" data-ajax-update="#resourceMainInfo"></a>
            <a href="#resourceMainInfo_collapse" data-toggle="collapse"><span class="glyphicon glyphicon-plus" style="float:left;"></span>&nbsp;Основная информация</a>
        </div>
    </div>
    <div id="resourceMainInfo_collapse" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        @Model.Name
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DisplayName" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        @Model.DisplayName
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        @Model.Description
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Required" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <div class="checkbox">
                            <input asp-for="Required" type="checkbox" disabled="disabled" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Emphasize" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <div class="checkbox">
                            <input asp-for="Emphasize" type="checkbox" disabled="disabled" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ShowInDiscoveryDocument" class="col-md-3 control-label"></label>
                    <div class="col-md-4">
                        <div class="checkbox">
                            <input asp-for="ShowInDiscoveryDocument" type="checkbox" disabled="disabled" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Enabled" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <div class="checkbox">
                            <input asp-for="Enabled" type="checkbox" disabled="disabled" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>