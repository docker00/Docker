@model IdentityResourceInputModel

@{
    ViewData["Title"] = "Редактирование ресурса";
}

<div id="resourceEdit" class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <a href="#resourceEdit_collapse" data-toggle="collapse">@ViewData["Title"]<span class="glyphicon glyphicon-plus" style="float:right;"></span></a>
        </div>
    </div>
    <div id="resourceEdit_collapse" class="panel-collapse collapse in">
        <form asp-controller="IdentityResource" asp-action="_EditPartial"
              data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace-with" data-ajax-update="#resourceEdit">
            <div class="panel-body">
                <div class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" class="form-control" />
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="DisplayName" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="DisplayName" class="form-control" />
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Required" class="col-md-2 control-label">Required</label>
                        <div class="col-md-4">
                            <div class="checkbox">
                                <input type="checkbox" asp-for="Required" />
                                <span asp-validation-for="Required" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Emphasize" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <div class="checkbox">
                                <input type="checkbox" asp-for="Emphasize" />
                                <span asp-validation-for="Emphasize" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShowInDiscoveryDocument" class="col-md-3 control-label"></label>
                        <div class="col-md-4">
                            <div class="checkbox">
                                <input type="checkbox" asp-for="ShowInDiscoveryDocument" />
                                <span asp-validation-for="ShowInDiscoveryDocument" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Enabled" class="col-md-2 control-label"></label>
                        <div class="col-md-4">
                            <div class="checkbox">
                                <input type="checkbox" asp-for="Enabled" />
                                <span asp-validation-for="Enabled" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-success">Сохранить&nbsp;<span class="glyphicon glyphicon-ok"></span></button>
                <a href="/IdentityResource/_DetailsPartial/?identityResourceId=@Model.Id" class="btn btn-default" style="float:right"
                   data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace-with" data-ajax-update="#resourceEdit">
                    Отмена&nbsp;<span class="glyphicon glyphicon-ban-circle"></span>
                </a>
            </div>
        </form>
    </div>
</div>