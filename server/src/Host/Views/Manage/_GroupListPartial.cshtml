@model IEnumerable<GroupViewModel>

@{
    string userId = ViewBag.UserId;
}

<div class="panel panel-default" id="allowedScopes">
    <div class="panel-heading">
        <div class="panel-title">
            <a href="#allowedScopes_collapse" data-toggle="collapse"><span class="glyphicon glyphicon-plus" style="float:left;"></span>&nbsp;Группы</a>
        </div>
    </div>
    <div id="allowedScopes_collapse" class="panel-collapse collapse">
        <div class="panel-body">
            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr>
                        <th style="text-align:center;">Состоит в группах</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (GroupViewModel group in Model)
                        {
                            <tr>
                                <td align="center">@group.Name</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" align="center">Нет записей</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

