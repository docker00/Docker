<div id="roleSelectModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Выбор ролей</h4>
            </div>
            <div class="modal-body">
                <table id="roleList_data_table"
                       data-url="/Role/Data"
                       data-toggle="table"
                       data-show-refresh="true"
                       data-show-toggle="true"
                       data-method="get"
                       data-show-columns="true"
                       data-pagination="true"
                       data-side-pagination="server"
                       data-page-size="10"
                       data-response-handler="roleResposeHandler"
                       data-query-params="userQueryFormatter"
                       data-click-to-select="true"
                       data-page-list="[5, 10, 20, 50, 100, 200]"
                       data-search="true">
                    <thead>
                        <tr>
                            <th data-field="check" data-align="center" data-visible="true" data-checkbox="true"></th>
                            <th data-field="name" data-align="center" data-visible="true" data-sortable="true">
                                Название
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">Выбрать&nbsp;<span class="glyphicon glyphicon-ok"></span></button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Отмена&nbsp;<span class="glyphicon glyphicon-ban-circle"></span></button>
            </div>
        </div>
    </div>
</div>