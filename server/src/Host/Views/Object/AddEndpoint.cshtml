@model ObjectEndpointViewModel
@{
    string title = "Создание конечной точки для объекта";
    string objectId = ViewData["ObjectId"].ToString();
}

<h4><a href="/Object/ObjectEndpointList?objectId=@objectId">Список конечных точек</a></h4>
<hr />
<h3 class="page-header">@title</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Основная информация
        </h3>
    </div>

    <form asp-controller="Object" asp-action="AddEndpoint" method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" name="ObjectId" value="@objectId" />

        <div class="form-group">
            <label asp-for="Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="panel-footer">
                <button type="submit" class="btn btn-success">Добавить&nbsp;<span class="glyphicon glyphicon-ok"></span></button>
                <a href="/Object/ObjectEndpointList?objectId=@objectId" class="btn btn-default" style="float:right">Отмена&nbsp;<span class="glyphicon glyphicon-ban-circle"></span></a>
        </div>
    </form>
</div>