@model ObjectEndpoint
@using MySql.AspNet.Identity;
@{
    ViewData["Title"] = "Редактирование контрольной точки";
}

<h4><a href="/ObjectEndpoint/List">Список контрольных точек</a></h4>
<hr />
<h3 class="page-header">@ViewData["Title"]</h3>
<form asp-controller="Object" asp-action="_ObjectEndpointEditPartial"
      data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace-with" data-ajax-update="#ObjectEndpoints"
      data-ajax-success="back()" class="form-horizontal">

    <div class="form-group">
        <input asp-for="Id" type="hidden" class="form-control" />
        <label asp-for="Value" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ObjectId" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <select class="form-control" id="ObjectId" name="ObjectId">
                @if (ViewData["Objects"] != null)
                {
                    foreach (var _object in (List<MySql.AspNet.Identity.Object>)ViewData["Objects"])
                    {
                        @if (Model.ObjectId == _object.Id)
                        {
                            <option value="@_object.Id" selected>@_object.Name</option>
                        }
                        else
                        {
                            <option value="@_object.Id">@_object.Name</option>
                        }
                    }
                }
            </select>
            <span asp-validation-for="ObjectId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" class="btn btn-success">Сохранить&nbsp;<span class="glyphicon glyphicon-ok"></span></button>
        @*<a href="/Object/ObjectEndpointList?objectId=@Model.ObjectId" class="btn btn-default" style="float:right">Отмена&nbsp;<span class="glyphicon glyphicon-ban-circle"></span></a>*@
        <a href="/Object/_ObjectEndpointsListPartial?objectId=@Model.ObjectId" class="btn btn-default" role="button"
           data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace-with" data-ajax-update="#ObjectEndpoints" data-ajax-success="back()">Отмена</a>
    </div>
</form>
