@model RegisterViewModel

<form asp-controller="User" asp-action="_PasswordEditPartial" method="post" class="form-horizontal">
    <input type="hidden" name="userId" value="@ViewBag.userId" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="Password" class="control-label row-md-5"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="ConfirmPassword" class="control-label row-md-5"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <button type="button" class="btn btn-success">Сохранить&nbsp;<span class="glyphicon glyphicon-ok"></span></button>
            <button type="button" class="btn btn-default" style="float:right;">Отмена&nbsp;<span class="glyphicon glyphicon-ban-circle"></span></button>
        </div>
    </div>
</form>
