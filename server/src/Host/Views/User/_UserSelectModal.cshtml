<div id="userMergeModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Объединение пользователей</h4>
            </div>
            <div class="modal-body">
                <table id="userMerge_data_table"
                       data-toggle="table"
                       data-show-refresh="true"
                       data-show-toggle="true"
                       data-method="get"
                       data-show-columns="true"
                       data-pagination="true"
                       data-side-pagination="client"
                       data-page-size="10"
                       data-click-to-select="true"
                       data-page-list="[5, 10, 20, 50, 100, 200]"
                       data-search="true">
                    <thead>
                        <tr>
                            <th data-field="email" data-align="center" data-visible="true" data-sortable="true">
                                Email
                            </th>
                            <th data-field="userName" data-align="center" data-visible="true" data-sortable="true">
                                UserName
                            </th>
                            <th data-field="phoneNumber" data-align="center" data-visible="true" data-sortable="true">
                                PhoneNumber
                            </th>
                            <th data-field="actions" data-formatter="usersSelectActionFormatter" data-events="usersSelectOperateEvents" data-align="center" data-visible="true" data-sortable="false">
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">Объединить&nbsp;<span class="glyphicon glyphicon-ok"></span></button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Отмена&nbsp;<span class="glyphicon glyphicon-ban-circle"></span></button>
            </div>
        </div>
    </div>
</div>