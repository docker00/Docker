<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Список устройств</h3>
    </div>
    <div class="panel-body">
        <table id="deviceDataTable"
               data-url="/User/DeviceData"
               data-toggle="table"
               data-show-refresh="true"
               data-show-toggle="true"
               data-method="get"
               data-height="500"
               data-show-columns="true"
               data-pagination="true"
               data-side-pagination="server"
               data-page-size="10"
               data-page-list="[5, 10, 20, 50, 100, 200]"
               data-search="true">
            <thead>
                <tr>
                    <th data-field="name" data-align="center" data-visible="true" data-sortable="true">
                        Название
                    </th>
                    <th data-field="type" data-align="center" data-visible="true" data-sortable="true">
                        Тип
                    </th>
                    <th data-field="confirmed" data-align="center" data-visible="true" data-sortable="true">
                        Подтвержден?
                    </th>
                    <th data-field="actions" data-align="center" data-visible="true" data-sortable="false">
                        Действия
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

